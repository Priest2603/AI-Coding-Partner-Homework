    {
      "name": "Create Ticket",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer_id\": \"CUST001\",\n  \"customer_email\": \"john.doe@example.com\",\n  \"customer_name\": \"John Doe\",\n  \"subject\": \"Cannot access my account\",\n  \"description\": \"I've been trying to log in for the past hour but keep getting an error message saying my credentials are invalid.\",\n  \"category\": \"account_access\",\n  \"priority\": \"high\",\n  \"status\": \"new\",\n  \"tags\": [\"login\", \"urgent\"],\n  \"metadata\": {\n    \"source\": \"web_form\",\n    \"browser\": \"Chrome 120\",\n    \"device_type\": \"desktop\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/tickets",
          "host": ["{{baseUrl}}"],
          "path": ["tickets"]
        },
        "description": "Create a new support ticket"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has correct schema', function () {",
              "    const jsonData = pm.response.json();",
              "    ",
              "    // Required fields",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData).to.have.property('customer_id');",
              "    pm.expect(jsonData).to.have.property('customer_email');",
              "    pm.expect(jsonData).to.have.property('customer_name');",
              "    pm.expect(jsonData).to.have.property('subject');",
              "    pm.expect(jsonData).to.have.property('description');",
              "    pm.expect(jsonData).to.have.property('category');",
              "    pm.expect(jsonData).to.have.property('priority');",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('created_at');",
              "    pm.expect(jsonData).to.have.property('updated_at');",
              "    pm.expect(jsonData).to.have.property('tags');",
              "    pm.expect(jsonData).to.have.property('metadata');",
              "    ",
              "    // Validate types",
              "    pm.expect(jsonData.id).to.be.a('string');",
              "    pm.expect(jsonData.customer_email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);",
              "    pm.expect(jsonData.tags).to.be.an('array');",
              "    pm.expect(jsonData.metadata).to.be.an('object');",
              "    ",
              "    // Save ticket ID for subsequent requests",
              "    pm.collectionVariables.set('ticketId', jsonData.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
