    {
      "name": "Auto-Classify Ticket",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tickets/{{ticketId}}/auto-classify",
          "host": ["{{baseUrl}}"],
          "path": ["tickets", "{{ticketId}}", "auto-classify"]
