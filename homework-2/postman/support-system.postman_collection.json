        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Classification response has required fields', function () {",
              "    const jsonData = pm.response.json();",
              "    ",
              "    pm.expect(jsonData).to.have.property('ticket');",
              "    pm.expect(jsonData).to.have.property('classification');",
              "    ",
              "    const classification = jsonData.classification;",
              "    pm.expect(classification).to.have.property('category');",
              "    pm.expect(classification).to.have.property('priority');",
              "    pm.expect(classification).to.have.property('confidence');",
              "    pm.expect(classification).to.have.property('reasoning');",
              "    pm.expect(classification).to.have.property('keywords_found');",
              "    ",
              "    // Validate confidence is between 0 and 1",
              "    pm.expect(classification.confidence).to.be.a('number');",
              "    pm.expect(classification.confidence).to.be.at.least(0);",
              "    pm.expect(classification.confidence).to.be.at.most(1);",
              "    ",
              "    // Validate arrays",
              "    pm.expect(classification.keywords_found).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
